.user-box{
  background: #F5F5F5;
}
.user-top{
  background-color: rgb(245, 241, 241);
  padding: 30rpx 30rpx 30rpx 0;
  background: #FCFCFC;
}
.user-top .user-box-avatar{
  width: 128rpx;
  height: 128rpx;
}
.user-top .user-top-name{
  width:92rpx;
  height:67rpx;
  font-size:48rpx;
  font-weight:400;
  line-height:67rpx;
  color:rgba(16,16,16,1);
  margin-left: 30rpx;
}
.user-top-btn-item{
  padding: 15rpx 20rpx;
  background: #346FEE;
  border-radius: 45rpx;
  color: #fff;
  font-size: 26rpx;
  margin-left: 10px;
}
.user-top-btn-text{
  margin-right: 10rpx;
}
.user-top-btn-icon{
  font-size: 30rpx;
  background: #fff;
  border-radius: 100%;
  padding: 5rpx;
}
.user-box .content{
  font-size: 28rpx;
}