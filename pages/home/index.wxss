@import "../../style/animation.wxss";
.home-box{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: #fff;
}
.home-list{
  position: relative;
  height: 100%;
  width: 100%;
}
.home-item{
  position: absolute;
  left: 15rpx;
  right: 15rpx;
  border-radius:20rpx;
  height: calc( 100% - 60rpx);
  border: 1px solid #c9c9c9;
  box-shadow:0px 2px 4px rgba(201,201,201,0.5);
  z-index: 5;
}
.home-waiting{
  z-index: 1;
}
.home-item-bg{
  position: absolute;
  left: 16rpx;
  right: 16rpx;
  border-radius: 30rpx;
  height: calc( 100% - 45rpx);
  border-bottom: 1px solid #c9c9c9;
  box-shadow:0px 2px 4px rgba(201,201,201,0.5);
}
.home-item-bg1{
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  border-radius: 35rpx;
  height: calc( 100% - 30rpx);
  border-bottom: 1px solid #c9c9c9;
  box-shadow:0px 2px 4px rgba(201,201,201,0.5);
}
.home-item image{
  width: 100%;
  height: 82%;
  border-radius: 20rpx;
}
.home-info{
  padding: 40rpx 30rpx;
}
.home-info-name{
  font-size:34rpx;
  font-weight:bold;
  color:rgba(43,43,43,1);
}
.home-info-item{
  font-size:24rpx;
  font-weight:400;
  color:rgba(74,74,74,1);
  opacity:0.63;
  margin-left: 40rpx;
}
.home-info-item-box .home-info-item{
  margin-left: 0;
}
.home-info-item-line{
  width: 2rpx;
  height: 20rpx;
  border-right: 1rpx solid rgba(74,74,74,1);
  margin: 0 10rpx;
}
.home-btn{
  position: absolute;
  right: 15rpx;
  top: 50%;
  font-size: 60rpx;
  z-index: 10;
}
.home-btn-icon-box{
  width: 96rpx;
  height: 96rpx;
  border-radius: 100%;
  background: #fff;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
}
/*modal style*/
.home-box .cu-dialog{
  width: 80%;
}
.home-modal-title{
  font-size:40rpx;
  font-weight:500;
  color:rgba(74,74,74,1);
  letter-spacing: 8rpx;
}
.home-modal-description{
  font-size:30rpx;
  font-weight:500;
  color:rgba(155,155,155,1);
  padding: 20rpx 0 40rpx;
  line-height: 40rpx;
  text-align: left;
  letter-spacing: 6rpx;
}
/*结束推荐*/
.home-waiting-words{
  padding: 30rpx 70rpx;
  font-size: 36rpx;
  text-align: center;
  /*color: #336EEE;*/
  line-height: 50rpx;
}
.home-waiting-btns{
  text-align: center;
}
.home-waiting-btn{
  font-size: 36rpx;
}
.home-waiting-labels{
  padding: 0 95rpx;
}
.home-waiting-label{
  font-size:24rpx;
  padding: 10rpx 0;
  color:#646464;
}
